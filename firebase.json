{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "site": "barcode-scanner-cs465",
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/api/upc/**",
        "function": "upc"
      },
      {
        "source": "/scanner",
        "destination": "/scanner.html"
      },
      {
        "source": "/scanner/**",
        "destination": "/scanner.html"
      },
      {
        "source": "/login",
        "destination": "/login.html"
      },
      {
        "source": "/login/**",
        "destination": "/login.html"
      },
      {
        "source": "/history",
        "destination": "/history.html"
      },
      {
        "source": "/history/**",
        "destination": "/history.html"
      },
      {
        "source": "/items",
        "destination": "/scanned-items.html"
      },
      {
        "source": "/items/**",
        "destination": "/scanned-items.html"
      },
      {
        "source": "/scanned-items",
        "destination": "/scanned-items.html"
      },
      {
        "source": "/scanned-items/**",
        "destination": "/scanned-items.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**/*.@(js|css)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=31536000"
          }
        ]
      },
      {
        "source": "service-worker.js",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache"
          }
        ]
      }
    ]
  }
}
